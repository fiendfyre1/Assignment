#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    char name[50];
    char email[50];
    char phone[25];  
} UserData;

int main() {
    char Name[50];
    char newPhone[25];
    char line[150];
    FILE *fp;
    int isfound = 0;

    fp = fopen("user_data.txt", "r");
    
    if(fp == NULL) {
        printf("\nFile open failed\n\n");
        return 1;
    }

    int lines = 0;
    char ch;
    while (!feof(fp)) {
        ch = fgetc(fp);
        if (ch == '\n') {
            lines++;
        }
    }
    rewind(fp);

    UserData user[lines];

    printf("Enter name to update: ");
    scanf(" %s", Name);

    int i = 0;
    while(fgets(line, sizeof(line), fp) != NULL) {
        char *token;

        token = strtok(line, ":");
        token = strtok(NULL, ",");
        token +=1;
        strcpy(user[i].name, token);

        token = strtok(NULL, ":");
        token = strtok(NULL, ",");
        token += 1;
        strcpy(user[i].email, token);

        token = strtok(NULL, ":");
        token = strtok(NULL, "\n");
        token += 1;
        strcpy(user[i].phone, token);
        
        if(strcmp(user[i].name, Name) == 0) {
            printf("Enter new phone number: ");
            scanf(" %[^\n]", newPhone);

            strcpy(user[i].phone, newPhone);
            isfound = 1;
        }
        i++;
    }
    fclose(fp);

    if(isfound == 0) {
        printf("Invalid username\n");
    }
    else {
        fp = fopen("user_data.txt", "w");
        int ischange = 0;

        for(i = 0; i < lines; i++) {
            fgets(line, sizeof(line), fp);
            if(strstr(line, user[i].name) == NULL || strstr(line, user[i].email) == NULL || strstr(line, user[i].phone) == NULL) {
                ischange = 1;
                break;
            }
        }


        if (ischange == 0) {
            for(int i = 0; i < lines; i++) {
            fprintf(fp, "Name: %s, Email: %s, Phone number: %s\n", user[i].name, user[i].email, user[i].phone);
            }

            printf("Update complete\n");
        } else {
            printf("Other user data changed. Update cancelled\n");
        }
        
        
    }

    fclose(fp);

    return 0;
}
